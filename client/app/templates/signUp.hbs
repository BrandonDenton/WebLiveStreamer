<h1>Register a New Account</h1>

<form {{action "reg" on="submit"}} class="margin-one">
    <div class="form-group">
		<label for="username">Username</label>
		{{input id="username" class="form-control" type="text" value=username}}
	</div>
    <div class="form-group">
		<label for="password">Password</label>
		{{input id="password" class="form-control" type="text" value=password}}
	</div>
    <div class="form-group">
		<label for="passConfirm">Confirm Password</label>
		{{input id="passConfirm" class="form-control" type="text" value=passConfirm}}
	</div>
    <div class="form-group">
		<label for="email">Email Address</label>
		{{input id="email" class="form-control" type="text" value=email}}
	</div>
	
	<button type="submit" class="btn btn-primary">Create Account</button>
</form>

<p>Already a Member? Sign In!</p>
<form {{action "authenticate" on="submit"}}>
    <div class="form-group">
		<label for="username">Username</label>
		{{input id="username" class="form-control" type="text" value=username}
	</div>
    <div class="form-group">
		<label for="password">Password</label>
		{{input id="password" class="form-control" type="text" value=password}}
	</div>
	
	<button type="submit" class="btn btn-primary">Sign In</button>	
</form>

{{outlet}}